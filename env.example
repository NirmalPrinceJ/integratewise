# IntegrateWise Configuration
# Copy this file to .env and fill in your credentials

# =============================================
# DEPLOYMENT CONFIGURATION
# =============================================

# FTP Configuration
FTP_HOST=your-domain.com
FTP_USER=your_ftp_username
FTP_PASS=your_ftp_password
FTP_PORT=21
FTP_PATH=/public_html

# SFTP Configuration (alternative to FTP)
USE_SFTP=false
SFTP_PORT=22

# Deployment Options
DEPLOY_METHOD=ftp
# Options: ftp, sftp, rsync

# Optional: cPanel API (for advanced automation)
CPANEL_API_URL=https://your-domain.com:2083
CPANEL_API_TOKEN=your_api_token
CPANEL_USERNAME=your_cpanel_username

# =============================================
# AUTOMATION CONFIGURATION
# =============================================

# Server Configuration
PORT=3000
NODE_ENV=production

# Airtable Configuration
AIRTABLE_API_KEY=your_airtable_api_key
AIRTABLE_BASE_ID=your_airtable_base_id

# Coda Configuration
CODA_API_TOKEN=your_coda_api_token
CODA_DOC_ID=your_coda_doc_id

# Notion Configuration
NOTION_API_KEY=your_notion_api_key
NOTION_DATABASE_ID=your_notion_database_id

# Zoho Books Configuration
ZOHO_CLIENT_ID=your_zoho_client_id
ZOHO_CLIENT_SECRET=your_zoho_client_secret
ZOHO_REFRESH_TOKEN=your_zoho_refresh_token
ZOHO_ACCESS_TOKEN=your_zoho_access_token
ZOHO_ORGANIZATION_ID=your_zoho_org_id

# Google APIs Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REFRESH_TOKEN=your_google_refresh_token
GOOGLE_ACCESS_TOKEN=your_google_access_token

# Slack Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# Box API Configuration
BOX_CLIENT_ID=your_box_client_id
BOX_CLIENT_SECRET=your_box_client_secret
BOX_ACCESS_TOKEN=your_box_access_token
BOX_REFRESH_TOKEN=your_box_refresh_token

# Make.com Configuration
MAKE_WEBHOOK_URL=https://hook.make.com/your-webhook-url
MAKE_API_KEY=your_make_api_key

# n8n Configuration (backup orchestration)
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/your-webhook-id
N8N_API_KEY=your_n8n_api_key

# Twilio Configuration (optional - for SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
SMTP_FROM_EMAIL=noreply@integratewise.com
SMTP_FROM_NAME=IntegrateWise

# Database Configuration (for logging/state management)
DATABASE_URL=postgresql://username:password@localhost:5432/integratewise
# Alternative: Use Airtable for logging
USE_AIRTABLE_LOGGING=true

# Redis Configuration (for sync state caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Monitoring Configuration
UPTIME_ROBOT_API_KEY=your_uptime_robot_key
MONITORING_WEBHOOK=https://your-monitoring-webhook.com

# Security Configuration
API_RATE_LIMIT=100
API_RATE_WINDOW=60000
ENABLE_CORS=true
CORS_ORIGIN=https://integratewise.com

# Webhook Security
WEBHOOK_SECRET=your_webhook_secret_key
WEBHOOK_VALIDATION=true

# Bitwarden Configuration (for credential management)
BITWARDEN_API_URL=https://api.bitwarden.com
BITWARDEN_CLIENT_ID=your_bitwarden_client_id
BITWARDEN_CLIENT_SECRET=your_bitwarden_client_secret

# =============================================
# WORKFLOW-SPECIFIC CONFIGURATION
# =============================================

# Lead Assignment Rules
LEAD_OWNER_MULESOFT=nirmal
LEAD_OWNER_SALESFORCE=tbd
LEAD_OWNER_LOWCODE=tbd
LEAD_DEFAULT_OWNER=nirmal

# Invoice Settings
INVOICE_GST_RATE=0.18
INVOICE_PAYMENT_TERMS=30
INVOICE_CURRENCY=INR

# EMI Scheduling
EMI_REMINDER_DAYS=1
EMI_NOTIFICATION_TIME=07:00

# GST Filing
GST_FILING_DAY=5
GST_PAYMENT_DAY=20
ACCOUNTANT_EMAIL=accountant@example.com

# Data Sync Settings
SYNC_INTERVAL_MINUTES=15
SYNC_CONFLICT_RESOLUTION=latest_timestamp
ENABLE_AUTO_FIX=true

# Project Defaults
PROJECT_MILESTONE_PERCENTAGES=25,50,75,100
PROJECT_OVERDUE_REMINDER_DAYS=3
PROJECT_WEEKLY_REPORT_DAY=friday
PROJECT_WEEKLY_REPORT_TIME=17:00

# =============================================
# FEATURE FLAGS
# =============================================

ENABLE_LEAD_CAPTURE=true
ENABLE_CLIENT_ONBOARDING=true
ENABLE_PROJECT_TRACKING=true
ENABLE_INVOICING=true
ENABLE_EMI_SCHEDULING=true
ENABLE_DEBT_TRACKER=true
ENABLE_GST_AUTOMATION=true
ENABLE_ZOHO_SYNC=true
ENABLE_CROSS_PLATFORM_SYNC=true
ENABLE_DATA_INTEGRITY_CHECKS=true

# =============================================
# DEBUG & LOGGING
# =============================================

DEBUG_MODE=false
LOG_LEVEL=info
# Options: error, warn, info, debug, trace
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/automation.log
LOG_MAX_SIZE=10M
LOG_MAX_FILES=5